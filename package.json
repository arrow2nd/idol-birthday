{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "pnpm build:css && remix vite:build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm dev:css\" \"remix vite:dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "preinstall": "npx only-allow pnpm",
    "update:data": "tsx ./tools/gen-images.ts && prettier --write ./app/data/images.ts",
    "fmt": "prettier --write .",
    "test": "vitest"
  },
  "dependencies": {
    "@fontsource/azeret-mono": "^5.0.20",
    "@img/sharp-linux-x64": "^0.33.3",
    "@remix-run/node": "^2.9.1",
    "@remix-run/react": "^2.9.1",
    "@remix-run/vercel": "^1.19.3",
    "@vercel/node": "^3.0.27",
    "@vercel/og": "^0.6.2",
    "axios": "^1.6.8",
    "daisyui": "^4.10.2",
    "dayjs": "^1.11.11",
    "jimp": "^0.22.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.1.0",
    "react-rewards": "^2.0.4",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.1",
    "@remix-run/eslint-config": "^2.9.1",
    "@remix-run/serve": "^2.9.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^9.1.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
