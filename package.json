{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "pnpm build:css && remix vite:build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm dev:css\" \"remix vite:dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "preinstall": "npx only-allow pnpm",
    "update:data": "tsx ./tools/gen-images.ts && prettier --write ./app/data/images.ts",
    "fmt": "prettier --write .",
    "test": "vitest"
  },
  "dependencies": {
    "@fontsource/azeret-mono": "^5.1.1",
    "@img/sharp-linux-x64": "^0.34.0",
    "@remix-run/node": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@remix-run/vercel": "^1.19.3",
    "@vercel/node": "^5.0.2",
    "@vercel/og": "^0.6.5",
    "axios": "^1.7.9",
    "daisyui": "^4.12.23",
    "dayjs": "^1.11.13",
    "jimp": "^1.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-rewards": "^2.1.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.2",
    "@remix-run/eslint-config": "^2.15.2",
    "@remix-run/serve": "^2.15.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp@>=4.0.0 <6.3.0": ">=6.3.0",
      "cookie@<0.7.0": ">=0.7.0"
    }
  }
}
